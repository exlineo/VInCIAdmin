{
  "connection": "default",
  "collectionName": "actualites",
  "info": {
    "name": "actualite"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "titre": {
      "type": "string"
    },
    "alias": {
      "type": "string"
    },
    "intro": {
      "type": "text"
    },
    "media": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "lien": {
      "type": "string"
    },
    "contenu": {
      "type": "richtext"
    },
    "langue": {
      "model": "langue"
    }
  }
}
